/* pages/edit-profile/edit-profile.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 60rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  font-size: 32rpx;
  color: #888888;
}

.tab-nav {
  display: flex;
  background-color: #ffffff;
  padding: 0 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666666;
  position: relative;
}

.tab-item.active {
  color: #ff6b81;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background-color: #ff6b81;
  border-radius: 3rpx;
}

.form-container {
  background-color: #ffffff;
  padding: 40rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 15rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.textarea {
  width: 100%;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  min-height: 160rpx;
}

.picker {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-content {
  font-size: 28rpx;
  color: #333333;
}

.picker::after {
  content: '';
  width: 24rpx;
  height: 24rpx;
  border-top: 2rpx solid #999999;
  border-right: 2rpx solid #999999;
  transform: rotate(45deg);
}

.avatar-item {
  text-align: center;
  margin-bottom: 60rpx;
}

.avatar-upload {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  border: 1rpx solid #e0e0e0;
}

.avatar-upload-btn {
  font-size: 24rpx;
  padding: 10rpx 40rpx;
  line-height: 1.6;
}

.age-range {
  padding: 20rpx 0;
}

.switch-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.save-btn {
  background-color: #ff6b81;
  color: #ffffff;
  border-radius: 60rpx;
  font-size: 32rpx;
  margin-top: 60rpx;
}

.save-btn::after {
  border: none;
  border-radius: 60rpx;
}