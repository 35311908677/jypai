/* pages/activity-list/activity-list.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  position: relative;
}

.header {
  padding: 30rpx 40rpx;
  background-color: #ffffff;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.category-scroll {
  position: fixed;
  top: 90rpx;
  left: 0;
  right: 0;
  background-color: #ffffff;
  z-index: 99;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.category-list {
  display: flex;
  padding: 20rpx 0;
}

.category-item {
  padding: 0 40rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #666666;
  border-radius: 30rpx;
  margin: 0 10rpx;
}

.category-item.active {
  background-color: #ff6b81;
  color: #ffffff;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  font-size: 32rpx;
  color: #888888;
  margin-top: 200rpx;
}

.activity-list {
  padding: 200rpx 40rpx 140rpx;
}

.activity-item {
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.activity-image {
  width: 100%;
  height: 300rpx;
}

.activity-info {
  padding: 30rpx;
}

.activity-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.activity-meta {
  margin-bottom: 20rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.meta-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.meta-text {
  font-size: 24rpx;
  color: #666666;
  flex: 1;
}

.activity-count {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.count-text {
  font-size: 24rpx;
  color: #999999;
}

.category-text {
  font-size: 24rpx;
  color: #ff6b81;
  background-color: #fff0f3;
  padding: 5rpx 20rpx;
  border-radius: 15rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 300rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999999;
  margin-bottom: 10rpx;
}

.empty-tips {
  font-size: 28rpx;
  color: #cccccc;
}

.create-btn-container {
  position: fixed;
  bottom: 30rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  padding: 0 40rpx;
}

.create-btn {
  background-color: #ff6b81;
  color: #ffffff;
  font-size: 32rpx;
  padding: 0 60rpx;
  border-radius: 60rpx;
  width: 100%;
  box-shadow: 0 2rpx 10rpx rgba(255, 107, 129, 0.3);
}

.create-btn::after {
  border: none;
  border-radius: 60rpx;
}