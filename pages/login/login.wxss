/* pages/login/login.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  justify-content: space-between;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
  background-color: #ffffff;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 40rpx;
  margin-bottom: 30rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b81;
  margin-bottom: 20rpx;
}

.slogan {
  font-size: 26rpx;
  color: #888888;
  text-align: center;
  line-height: 40rpx;
}

.login-content {
  width: 100%;
  margin-bottom: 100rpx;
}

.login-btn {
  background-color: #ff6b81;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 60rpx;
  padding: 20rpx 0;
  margin-top: 60rpx;
}

.login-btn::after {
  border: none;
  border-radius: 60rpx;
}

.login-tips {
  text-align: center;
  font-size: 24rpx;
  color: #888888;
  margin-top: 30rpx;
  line-height: 40rpx;
}

.link {
  color: #ff6b81;
}