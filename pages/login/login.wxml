<!-- pages/login/login.wxml -->
<view class="container">
  <view class="logo-container">
    <image class="logo" src="https://picsum.photos/200/200" mode="aspectFit"></image>
    <text class="app-name">交友π</text>
    <text class="slogan">AI让相遇更有π——精准匹配，品质交友</text>
  </view>
  
  <view class="login-content">
    <button 
      open-type="getUserInfo" 
      bindgetuserinfo="onGetUserInfo" 
      class="login-btn"
      loading="{{isLoading}}"
    >
      微信一键登录
    </button>
    
    <view class="login-tips">
      <text>登录即表示您同意</text>
      <text class="link">《用户协议》</text>
      <text>和</text>
      <text class="link">《隐私政策》</text>
    </view>
  </view>
</view>