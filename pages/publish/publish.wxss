/* pages/publish/publish.wxss - Soul风格发布页面样式 */
/* Soul风格色彩和变量 */
:root {
  --primary-color: #ff4a75; /* Soul标志性粉色 */
  --secondary-color: #7464ff;
  --background-color: #f9f5ff;
  --card-background: #ffffff;
  --text-primary: #333333;
  --text-secondary: #999999;
  --text-tertiary: #cccccc;
  --border-color: #f0e6ff;
  --shadow: 0 4rpx 16rpx rgba(255, 74, 117, 0.1);
  --card-radius: 40rpx;
  --button-radius: 40rpx;
  --avatar-radius: 50%;
  --animation-speed: 0.3s;
}

/* 容器样式 */
.container {
  height: 100vh;
  background-color: var(--background-color);
  display: flex;
  flex-direction: column;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
}

/* 顶部导航栏 */
.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 40rpx;
  background-color: var(--card-background);
  box-shadow: var(--shadow);
  position: relative;
  z-index: 100;
}

.nav-title {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--primary-color);
}

.cancel-btn {
  font-size: 34rpx;
  color: var(--text-secondary);
  padding: 12rpx 24rpx;
  border-radius: var(--button-radius);
  transition: all var(--animation-speed) ease;
}

.publish-btn {
  font-size: 34rpx;
  color: var(--primary-color);
  font-weight: 700;
  padding: 12rpx 30rpx;
  border-radius: var(--button-radius);
  background-color: rgba(255, 74, 117, 0.1);
  transition: all var(--animation-speed) ease;
}

.publish-btn[disabled] {
  color: var(--text-tertiary);
}

/* 内容输入区 */
.publish-content {
  flex: 1;
  background-color: var(--card-background);
  padding: 40rpx;
  display: flex;
  flex-direction: column;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: var(--avatar-radius);
  margin-right: 24rpx;
  border: 4rpx solid rgba(255, 74, 117, 0.2);
  box-shadow: 0 4rpx 12rpx rgba(255, 74, 117, 0.1);
}

.user-name {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--text-primary);
}

/* 文本输入 */
.content-textarea {
  flex: 1;
  font-size: 36rpx;
  color: var(--text-primary);
  line-height: 56rpx;
  padding: 10rpx 0;
  placeholder-color: var(--text-tertiary);
  letter-spacing: 1rpx;
}

/* 字数统计 */
.word-count {
  text-align: right;
  margin-bottom: 30rpx;
}

.word-count text {
  font-size: 28rpx;
  color: var(--text-tertiary);
}

/* 图片选择器 */
.image-selector {
  margin-bottom: 20rpx;
}

.add-image-btn {
  width: 220rpx;
  height: 220rpx;
  border: 3rpx dashed var(--primary-color);
  border-radius: var(--card-radius);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 74, 117, 0.02);
  transition: all var(--animation-speed) ease;
}

.add-image-btn:active {
  background-color: rgba(0, 0, 0, 0.05);
  transform: scale(0.98);
}

.add-image-icon {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 12rpx;
}

.add-image-text {
  font-size: 30rpx;
  color: var(--primary-color);
  font-weight: 500;
}

/* 已选图片预览 */
.image-preview {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 30rpx;
}

.image-item {
  width: 220rpx;
  height: 220rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  border-radius: var(--card-radius);
  overflow: hidden;
  position: relative;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.image-item:nth-child(4n) {
  margin-right: 0;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.delete-image {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 50rpx;
  height: 50rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  width: 30rpx;
  height: 30rpx;
}

/* 音乐选择器 */
.music-selector, 
.topic-selector {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: rgba(255, 74, 117, 0.02);
  border-radius: var(--card-radius);
  margin-bottom: 24rpx;
  transition: all var(--animation-speed) ease;
  border: 2rpx solid rgba(255, 74, 117, 0.1);
}

.music-selector:active, 
.topic-selector:active {
  background-color: rgba(255, 74, 117, 0.05);
}

.music-icon, 
.topic-icon {
  width: 70rpx;
  height: 70rpx;
  margin-right: 24rpx;
  border-radius: 16rpx;
  background-color: rgba(255, 74, 117, 0.1);
  padding: 10rpx;
}

.music-text, 
.topic-text {
  flex: 1;
  font-size: 34rpx;
  color: var(--text-primary);
  font-weight: 600;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 已选音乐 */
.selected-music {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: rgba(255, 74, 117, 0.05);
  border-radius: var(--card-radius);
  margin-bottom: 24rpx;
  border: 2rpx dashed rgba(255, 74, 117, 0.1);
}

.music-cover {
  width: 70rpx;
  height: 70rpx;
  border-radius: 16rpx;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.music-details {
  flex: 1;
  overflow: hidden;
}

.music-title {
  font-size: 28rpx;
  color: var(--text-primary);
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.music-artist {
  font-size: 24rpx;
  color: var(--text-secondary);
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.delete-music {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 已选话题 */
.selected-topics {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.topic-tag {
  display: flex;
  align-items: center;
  background-color: rgba(255, 74, 117, 0.1);
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid rgba(255, 74, 117, 0.2);
  transition: all var(--animation-speed) ease;
}

.topic-tag text {
  font-size: 32rpx;
  color: var(--primary-color);
  font-weight: 600;
}

.delete-topic {
  margin-left: 10rpx;
}

.delete-icon-small {
  width: 24rpx;
  height: 24rpx;
}

/* 加载中遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(10rpx);
}

.loading-content {
  background-color: rgba(0, 0, 0, 0.8);
  padding: 40rpx 80rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-content .loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  border-top-color: #ffffff;
  animation: spin 1s ease-in-out infinite;
  margin-bottom: 20rpx;
}

.loading-content text {
  color: #ffffff;
  font-size: 32rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}