/* pages/profile/profile.wxss - Apple风格 */
:root {
  --primary-color: #ff6b81;
  --secondary-color: #5856d6;
  --background-color: #f5f5f5;
  --card-background: #ffffff;
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-tertiary: #888888;
  --border-color: #e0e0e0;
  --shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  --card-radius: 28rpx;
  --button-radius: 60rpx;
}

.container {
  background-color: var(--background-color);
  min-height: 100vh;
  padding-bottom: 60rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  font-size: 32rpx;
  color: var(--text-tertiary);
}

/* 顶部渐变背景 */
.header-gradient {
  height: 300rpx;
  background: linear-gradient(135deg, var(--primary-color), #ff8fa3);
  position: relative;
}

.profile-card {
  background-color: var(--card-background);
  padding: 40rpx;
  margin-top: -160rpx;
  margin-bottom: 20rpx;
  border-radius: var(--card-radius) var(--card-radius) 0 0;
  box-shadow: var(--shadow);
}

/* 头像容器 */
.avatar-container {
  display: flex;
  justify-content: center;
  position: relative;
  margin-bottom: 30rpx;
  transform: translateY(-40%);
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 8rpx solid var(--card-background);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
  transition: transform 0.3s ease;
}

.avatar:active {
  transform: scale(1.05);
}

.match-score {
  position: absolute;
  bottom: 10rpx;
  right: -60rpx;
  background-color: var(--primary-color);
  color: #ffffff;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 129, 0.3);
}

/* 基本信息 */
.basic-info {
  text-align: center;
  margin-bottom: 40rpx;
  margin-top: -60rpx;
}

.nickname {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 10rpx;
  display: block;
  letter-spacing: 0.5rpx;
}

.age-gender {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 10rpx;
  display: block;
}

.location {
  font-size: 26rpx;
  color: var(--text-tertiary);
  display: block;

}

/* 内容区域共享样式 */
.bio-section,
.interests-section,
.tags-section {
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 20rpx;
  display: block;
  padding-left: 10rpx;
  border-left: 4rpx solid var(--primary-color);
}

.bio-content {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 44rpx;
  padding: 20rpx;
  background-color: rgba(0, 0, 0, 0.02);
  border-radius: 16rpx;
}

.interests-list,
.tags-list {
  display: flex;
  flex-wrap: wrap;
}

.interest-tag,
.tag {
  background-color: rgba(255, 107, 129, 0.1);
  color: var(--primary-color);
  padding: 12rpx 28rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  border: 1rpx solid rgba(255, 107, 129, 0.2);
  transition: all 0.3s ease;
}

.interest-tag:active,
.tag:active {
  background-color: rgba(255, 107, 129, 0.2);
  transform: scale(1.05);
}

/* 操作按钮区域 */
.action-section {
  background-color: var(--card-background);
  padding: 0 40rpx 40rpx 40rpx;
  margin-bottom: 30rpx;
  border-radius: 0 0 var(--card-radius) var(--card-radius);
  box-shadow: var(--shadow);
}

/* 自己的操作 */
.own-actions {
  display: flex;
  flex-wrap: wrap;
  padding-top: 30rpx;
}

.action-item {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  transition: transform 0.2s ease;
}

.action-item:active {
  transform: scale(0.95);
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
  background-color: rgba(255, 107, 129, 0.1);
  border: 1rpx solid rgba(255, 107, 129, 0.2);
}

.action-item text {
  font-size: 26rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

/* 他人的操作 */
.other-actions {
  padding: 30rpx 0;
}

.btn-primary {
  background-color: var(--primary-color);
  color: #ffffff;
  border-radius: var(--button-radius);
  font-size: 34rpx;
  padding: 20rpx 0;
  font-weight: 600;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 129, 0.3);
  transition: all 0.3s ease;
}

.btn-primary::after {
  border: none;
  border-radius: var(--button-radius);
}

.btn-primary:active {
  background-color: #ff5570;
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(255, 107, 129, 0.4);
}